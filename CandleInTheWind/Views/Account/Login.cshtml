@model LoginViewModel

@{ 
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="~/css/shop/login.css" rel="stylesheet" />
</head>
<body>
    <div class="login">
        <div class="login-img">

        </div>
        <div class="login-form">
            <img src="~/images/shop/login/Group 21.svg" />
            <div class="login-form-input">
                <h1>Đăng nhập</h1>
                <form asp-controller="Account" asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <label for="">Email</label>
                    <input asp-for="LoginEmail" type="text">
                    <span asp-validation-for="LoginEmail" class="text-danger"></span>

                    <label for="">Mật khẩu</label>
                    <input asp-for="LoginPassword" type="password">
                    <span asp-validation-for="LoginPassword" class="text-danger"></span>
                    <button type="submit">Đăng nhập</button>
                </form>
                <p>Bạn chưa có tài khoản? <a asp-controller="Account" asp-action="Register">Đăng ký</a></p>
            </div>
            <img src="~/images/shop/login/Group 21.svg" />
        </div>

    </div>
</body>
</html>