<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="~/css/shop/home.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/7fc8488950.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <div class="background"></div>
        <div class="text">
            <h1><a asp-controller="Home" asp-action="Index" style="text-decoration: none; color: black">Funiro.</a></h1>
            <ul>
                @await Component.InvokeAsync("CategoryDropdown")
                <li><a href="">Thông tin cửa hàng</a></li>
            </ul>

            <input placeholder="Search ..."
                   type="text">
            <ul>
                <li><i class="far fa-heart"></i></li>
                <li><i class="fas fa-shopping-cart"></i></li>
                @if (!User.Identity.IsAuthenticated)
                { 
                    <li>
                        <a asp-controller="Account" asp-action="Login">
                            <i class="fas fa-user"></i>
                        </a>
                        <p>(Đăng nhập)</p>
                    </li>
                }
                else
                {
                    <li>
                        <a asp-controller="Account" asp-action="Logout">
                            <i class="fas fa-user" style="color: #ed165f"></i>
                        </a>
                        <p>(@User.Identity.Name)</p>
                    </li>
                }
            </ul>
        </div>
    </header>
    @RenderBody()
    <footer>
    </footer>
    <div class="contact">

    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>