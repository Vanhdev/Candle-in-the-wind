@model LoginViewModel

@*<div class="sign-in-page">
    <div class="row">*@
        <!-- Sign-in -->
        <div class="col-md-6 col-sm-6 sign-in">
            <h4 class="">Sign in</h4>
            <p class="">Hello, Welcome to your account.</p>
            
            
            <form name="LoginForm" asp-controller="Account" asp-action="Login" class="register-form outer-top-xs" role="form" method="post">
                @if ((string)ViewData["Error"] == "Login")
                { 
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                }
                <div class="form-group">
                    <label asp-for="LoginEmail" class="info-title" for="exampleInputEmail1"></label> <span>*</span>
                    <input asp-for="LoginEmail" class="form-control unicase-form-control text-input" id="exampleInputEmail1">
                    <span asp-validation-for="LoginEmail" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LoginPassword" class="info-title" for="exampleInputPassword1"></label> <span>*</span>
                    <input asp-for="LoginPassword" type="password" class="form-control unicase-form-control text-input" id="exampleInputPassword1">
                    <span asp-validation-for="LoginPassword" class="text-danger"></span>
                </div>

                <div class="radio outer-xs">
                    <label>
                        <input asp-for="RememberMe" type="radio" name="optionsRadios" id="optionsRadios2" value="option2">Remember me!
                    </label>
                    <a href="#" class="forgot-password pull-right">Forgot your Password?</a>
                </div>
                <button type="submit" class="btn-upper btn btn-primary checkout-page-button">Login</button>
            </form>
        </div>
        <!-- Sign-in -->
