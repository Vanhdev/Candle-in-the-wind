@model RegisterViewModel

@*<div class="sign-in-page">
    <div class="row">*@
        <!-- create a new account -->
        <div class="col-md-6 col-sm-6 create-new-account">
            <h4 class="checkout-subtitle">Create a new account</h4>
            <p class="text title-tag-line">Create your new account.</p>

            <form name="RegisterForm" asp-controller="Account" asp-action="Register" class="register-form outer-top-xs" role="form" method="post">
                    @if ((string)ViewData["Error"] == "Register")
                    { 
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    }
                
                    <div class="form-group">
                        <label asp-for="RegisterEmail" class="info-title" for="exampleInputEmail2"></label> <span>*</span>
                        <input asp-for="RegisterEmail" type="email" class="form-control unicase-form-control text-input" id="exampleInputEmail2">
                        <span asp-validation-for="RegisterEmail" class="text-danger"></span>
                    </div>

                <div class="form-group">
                    <label asp-for="UserName" class="info-title" for="exampleInputEmail1"></label> <span>*</span>
                    <input asp-for="UserName" class="form-control unicase-form-control text-input" id="exampleInputEmail1">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber" class="info-title" for="exampleInputEmail1"></label> <span>*</span>
                    <input asp-for="PhoneNumber" class="form-control unicase-form-control text-input" id="exampleInputEmail1">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Gender"></label> <span>*</span>
                    <div>
                        @foreach (var gender in Enum.GetValues(typeof(Gender)))
                        {
                            <label>
                                <input asp-for="Gender" type="radio" value="@gender" />
                                @gender
                            </label>
                        }
                    </div>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="RegisterPassword" class="info-title" for="exampleInputEmail1"></label> <span>*</span>
                    <input asp-for="RegisterPassword" class="form-control unicase-form-control text-input" id="exampleInputEmail1">
                    <span asp-validation-for="RegisterPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="info-title" for="exampleInputEmail1"></label> <span>*</span>
                    <input asp-for="ConfirmPassword" class="form-control unicase-form-control text-input" id="exampleInputEmail1">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn-upper btn btn-primary checkout-page-button">Sign Up</button>
            </form>
        </div>
        <!-- create a new account -->
    @*</div>
</div>*@