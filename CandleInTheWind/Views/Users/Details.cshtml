@model CandleInTheWind.Models.User

@{
	ViewData["Title"] = "Thông tin khách hàng";
}

<div class="main-body">
 <div class="page-wrapper">
  <!-- Page-header start -->
  <div class="page-header">
   <div class="row align-items-end">
	<div class="col-lg-8">
	 <div class="page-header-title">
	  <div class="d-inline">
	   <h4>Customer information</h4>
	  </div>
	 </div>
	</div>
   </div>
  </div>
  <div class="card">
   <div class="card-block">
	<div class="view-info">
	 <div class="row">
	  <div class="col-lg-12">
	   <div class="general-info">
		<div class="row">
		 <div class="col-lg-12 col-xl-6">
		  <div class="table-responsive">
		   <table class="table m-0">
			<tbody>
			 <tr>
			  <th scope="row">User name</th>
			  <td>@Html.DisplayFor(model => model.UserName)</td>
			 </tr>
			 <tr>
			  <th scope="row">Email</th>
			  <td>@Html.DisplayFor(model => model.Email)</td>
			 </tr>
			 <tr>
			  <th scope="row">Ngày sinh</th>
			  <td>@Html.DisplayFor(model => model.DateOfBirth)</td>
			 </tr>
			</tbody>
		   </table>
		  </div>
		 </div>
		 <!-- end of table col-lg-6 -->
		 <div class="col-lg-12 col-xl-6">
		  <div class="table-responsive">
		   <table class="table">
			<tbody>
			 <tr>
			  <th scope="row">Giới tính</th>
			  <td>@Html.DisplayFor(model => model.Gender)</td>
			 </tr>
			 <tr>
			  <th scope="row">Số điện thoại</th>
			  <td>@Html.DisplayFor(model => model.PhoneNumber)</td>
			 </tr>
			 <tr>
			  <th scope="row">Điểm tích lũy</th>
			  <td>@Html.DisplayFor(model => model.Points)</td>
			 </tr>
			</tbody>
		   </table>
		  </div>
		 </div>
		 <!-- end of table col-lg-6 -->
		</div>
		<!-- end of row -->
	   </div>
	   <!-- end of general info -->
	  </div>
	  <!-- end of col-lg-12 -->
	 </div>
	 <!-- end of row -->
	</div>
	<a class="btn btn-primary" style="margin-bottom: 10px;" asp-action="Index">
	  Back
	 </a>

   </div>
   <!-- end of card-block -->
  </div>
  <!-- Page-header end -->
 </div>
</div>


